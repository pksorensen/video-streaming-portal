# RTMP Server Configuration
RTMP_PORT=1935
HTTP_PORT=8000
MEDIA_ROOT=./media

# Stream Configuration
MAX_BITRATE=5000
ALLOW_ORIGIN=*
ENABLE_AUTH=false

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/streaming.log